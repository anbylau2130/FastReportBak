@model USP.Models.POCO.RePassword
@{
    ViewBag.Title = "Create";
}
@section themes{
    <link href="/Static/Css/usp/usp.changepassword.css" rel="stylesheet" />
}

<div class="panel panel-info">
    <div class="panel-heading">
        <i class="glyphicon glyphicon-edit"></i>修改密码
    </div>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group ">
                <label class="col-md-2 control-label">旧密码</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @Type = "password", id = "OldPassword", placeholder = "旧密码" } })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ">
                <label class="control-label col-md-2">新密码</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @Type = "password", id = "NewPassword", placeholder = "新密码" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ">
                <label class="control-label col-md-2">确认密码</label>
                    <div class="col-md-5">
                       @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @Type = "password", id = "PasswordConfirm", placeholder = "确认密码" } })
                         @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                    </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5 pull-left">
                    <button type="submit" id="submit-btn" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i>&nbsp;修&nbsp;改</button>
                </div>
            </div>
         </div>
        @*</form>*@
        </div>
        }
    </div>
@section scripts
{
    <script type="text/javascript" src="~/Static/Js/usp/usp.system.changepassword.js"></script>
    <script>
        $(function () {
            usp.init();
            if ('@TempData["resultMsgType"]' == 'success') {
                toastr.success('@TempData["resultMsg"]');
            } else if ('@TempData["resultMsgType"]' == 'error') {
                toastr.error('@TempData["resultMsg"]');
            }
        });
    </script>
}
